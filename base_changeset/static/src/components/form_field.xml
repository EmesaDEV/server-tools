<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <!--
    Customization with web.Field doesn't position badge next to the field properly for address fields.
    Address change badge is displayed below the field and requires extra adjustments by moving the field elements into a div

    As it doesn't solve all the cases, it cannot be proposed into the OCA.
    -->
    <t t-inherit="web.Field" t-inherit-mode="extension">
        <xpath expr="//div" position="after">
            <BaseChangesetPopoverWrapper record="props.record" fieldName="props.id" />
        </xpath>
    </t>
</templates>
